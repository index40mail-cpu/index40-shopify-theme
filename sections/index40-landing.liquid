{% comment %}
  INDEX40 Landing Page – Full Custom Section for Shopify
  ======================================================
  Drop this file into your Shopify theme's /sections/ folder.
  Then update templates/index.json to use this section.
  
  TRACKING: Do NOT add pixels here. Use Shopify's native pixel integrations:
  → Settings > Customer events > Add custom pixel (Meta CAPI, Google, Clarity)
  This gives you server-side tracking + proper first-party attribution.
  
  NETLIFY FUNCTIONS: The lookup-profile calls use section.settings.api_endpoint.
  Set your API URL in the Shopify theme editor.
{% endcomment %}

{%- style -%}
/* ============================================
 INDEX40 – Styles principaux v4
 QOVES-inspired: clean, white, premium, social proof
 ============================================ */

/* --- Variables & Reset --- */
:root {
 --teal: #4298b5;
 --teal-light: #88c5d7;
 --teal-bg: #e8f4f8;
 --purple: #7c5cbf;
 --purple-light: #a78bda;
 --purple-bg: #f0ebf8;
 --green: #4caf7d;
 --green-light: #7dd3a4;
 --green-bg: #e6f7ee;
 --gold: #e8a838;
 --gold-light: #f0c56e;
 --gold-bg: #fdf4e3;
 --white: #ffffff;
 --off-white: #f8f9fb;
 --light-gray: #f0f1f4;
 --mid-gray: #8e9aaf;
 --dark-gray: #4a5568;
 --near-black: #2d3748;
 --text: #1a202c;
 --radius: 12px;
 --radius-lg: 20px;
 --radius-full: 100px;
 --shadow-sm: 0 2px 8px rgba(0,0,0,.04);
 --shadow-md: 0 8px 30px rgba(0,0,0,.07);
 --shadow-lg: 0 20px 60px rgba(0,0,0,.09);
 --transition: .3s ease;
}

* { margin: 0; padding: 0; box-sizing: border-box; }
html { scroll-behavior: smooth; }

body {
 font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
 background: var(--white);
 color: var(--text);
 overflow-x: hidden;
 -webkit-font-smoothing: antialiased;
 line-height: 1.6;
}

a { text-decoration: none; color: inherit; }
img { max-width: 100%; display: block; }

/* --- Loader --- */
.loader {
 position: fixed; inset: 0; z-index: 10000;
 background: var(--teal);
 display: flex; align-items: center; justify-content: center;
 transition: opacity .8s, visibility .8s;
}
.loader.hidden { opacity: 0; visibility: hidden; pointer-events: none; }
.loader-text {
 font-family: 'Red Hat Display', sans-serif;
 font-size: clamp(2rem, 5vw, 3.5rem);
 color: var(--white); letter-spacing: .2em; font-weight: 700;
 animation: lp 1.5s ease infinite;
}
@keyframes lp { 0%,100%{opacity:.3} 50%{opacity:1} }

/* --- Navigation --- */
.navbar {
 position: fixed; top: 0; left: 0; right: 0; z-index: 1000;
 padding: 1rem 2rem;
 display: flex; align-items: center; justify-content: space-between;
 transition: all .4s;
 background: transparent;
}
.navbar.scrolled {
 background: rgba(255,255,255,.97);
 backdrop-filter: blur(20px);
 box-shadow: 0 1px 0 rgba(0,0,0,.06);
}

.nav-logo {
 display: flex; align-items: center; gap: .6rem;
 font-family: 'Red Hat Display', sans-serif;
 font-size: 1.6rem; font-weight: 800;
 letter-spacing: .05em; color: var(--white);
}
.navbar.scrolled .nav-logo { color: var(--near-black); }

.nav-logo-accent {
 color: var(--teal);
}

.nav-logo-dots {
 display: grid; grid-template-columns: repeat(4, 8px); gap: 3px;
}
.nav-logo-dot {
 width: 8px; height: 8px; border-radius: 50%;
}
.nav-logo-dot:nth-child(1), .nav-logo-dot:nth-child(5), .nav-logo-dot:nth-child(9), .nav-logo-dot:nth-child(13) { background: var(--purple); }
.nav-logo-dot:nth-child(2), .nav-logo-dot:nth-child(6), .nav-logo-dot:nth-child(10), .nav-logo-dot:nth-child(14) { background: var(--teal); }
.nav-logo-dot:nth-child(3), .nav-logo-dot:nth-child(7), .nav-logo-dot:nth-child(11), .nav-logo-dot:nth-child(15) { background: var(--gold); }
.nav-logo-dot:nth-child(4), .nav-logo-dot:nth-child(8), .nav-logo-dot:nth-child(12), .nav-logo-dot:nth-child(16) { background: var(--green); }

.nav-links {
 display: flex; gap: 2rem; align-items: center;
}
.nav-links a {
 font-size: 1rem; font-weight: 500;
 color: rgba(255,255,255,.85); transition: color var(--transition);
}
.nav-links a:hover { color: #fff; }
.navbar.scrolled .nav-links a { color: var(--dark-gray); }
.navbar.scrolled .nav-links a:hover { color: var(--teal); }

.nav-cta-btn {
 padding: .6rem 1.6rem;
 background: var(--near-black);
 color: #fff !important;
 border-radius: var(--radius-full);
 font-weight: 600; font-size: 1rem;
 transition: all var(--transition);
}
.nav-cta-btn:hover {
 background: var(--teal);
 transform: translateY(-1px);
}

/* --- Hero --- */
.hero {
 min-height: 100vh;
 background: linear-gradient(165deg, rgba(66,152,181,.85) 0%, rgba(91,176,201,.8) 40%, rgba(66,152,181,.75) 100%), url('../assets/hero-bg.png') center/cover no-repeat;
 display: flex; flex-direction: column;
 justify-content: center; align-items: center;
 text-align: center;
 padding: 8rem 2rem 5rem;
 position: relative; overflow: hidden;
}

.hero::after {
 content: '';
 position: absolute; bottom: 0; left: 0; right: 0;
 height: 100px;
 background: linear-gradient(to top, var(--white), transparent);
 pointer-events: none;
}

.hero-badge {
 display: inline-block;
 padding: .5rem 1.4rem;
 background: rgba(255,255,255,.15);
 backdrop-filter: blur(10px);
 border: 1px solid rgba(255,255,255,.25);
 border-radius: var(--radius-full);
 font-size: .85rem; font-weight: 700;
 letter-spacing: .12em;
 color: rgba(255,255,255,.95);
 margin-bottom: 2rem;
 animation: fu 1s ease .1s both;
}

.hero h1 {
 font-family: 'Red Hat Display', sans-serif;
 font-size: clamp(2.8rem, 6vw, 4.5rem);
 font-weight: 800; line-height: 1.15;
 color: #fff; max-width: 850px;
 animation: fu 1s ease .3s both;
}
.hero h1 em {
 font-style: italic;
}

.hero-sub {
 font-size: clamp(1.15rem, 2vw, 1.35rem);
 color: rgba(255,255,255,.85);
 max-width: 650px; line-height: 1.7;
 margin-top: 1.5rem; font-weight: 400;
 animation: fu 1s ease .5s both;
}

.hero-cta {
 display: inline-flex; align-items: center; gap: .7rem;
 padding: 1.1rem 2.8rem; margin-top: 2rem;
 background: var(--near-black); color: #fff;
 border-radius: var(--radius-full);
 font-size: 1.15rem; font-weight: 700;
 transition: all var(--transition);
 animation: fu 1s ease .7s both;
 box-shadow: 0 8px 25px rgba(0,0,0,.2);
 cursor: pointer; border: none;
 font-family: inherit;
}
.hero-cta:hover {
 background: #1a202c;
 transform: translateY(-2px);
 box-shadow: 0 12px 35px rgba(0,0,0,.3);
}
.hero-cta svg { width: 20px; height: 20px; transition: transform .3s; }
.hero-cta:hover svg { transform: translateX(4px); }

.hero-micro {
 font-size: .95rem;
 color: rgba(255,255,255,.7);
 margin-top: 1.5rem;
 animation: fu 1s ease .9s both;
}

/* Hero type tabs */
#heroTabs button {
  padding:.4rem .8rem; border-radius:8px; font-size:.78rem;
  font-weight:700; cursor:pointer; border:1px solid rgba(255,255,255,.2);
  background:rgba(255,255,255,.1); color:rgba(255,255,255,.7);
  transition:all .15s; font-family:'Inter',sans-serif; letter-spacing:.02em;
}
#heroTabs button:hover { background:rgba(255,255,255,.2); color:#fff; }
#heroTabs button.active { background:#fff; color:#1a202c; border-color:#fff; }

.hero-micro strong { color: rgba(255,255,255,.95); }

/* Hero results access section */
.hero-results-access {
 margin-top: 1.8rem;
 animation: fu 1s ease 1s both;
}
.hero-results-label {
 font-size: .9rem;
 color: rgba(255,255,255,.65);
 margin-bottom: .6rem;
}
.hero-results-form {
 display: flex;
 gap: .5rem;
 max-width: 460px;
 margin: 0 auto;
}
.hero-results-input {
 flex: 1;
 padding: .75rem 1rem;
 border: 2px solid rgba(255,255,255,.2);
 border-radius: var(--radius-full);
 background: rgba(255,255,255,.1);
 color: #fff;
 font-size: .95rem;
 font-family: 'Inter', sans-serif;
 outline: none;
 transition: border-color .3s, background .3s;
}
.hero-results-input::placeholder { color: rgba(255,255,255,.4); }
.hero-results-input:focus {
 border-color: rgba(255,255,255,.5);
 background: rgba(255,255,255,.15);
}
.hero-results-btn {
 padding: .75rem 1.5rem;
 border: none;
 border-radius: var(--radius-full);
 background: #fff;
 color: var(--teal);
 font-size: .9rem;
 font-weight: 700;
 font-family: 'Inter', sans-serif;
 cursor: pointer;
 white-space: nowrap;
 transition: all .3s;
}
.hero-results-btn:hover { background: rgba(255,255,255,.9); transform: translateY(-1px); }
.hero-results-btn:disabled { opacity: .6; cursor: not-allowed; transform: none; }
.hero-results-msg {
 margin-top: .5rem;
 font-size: .85rem;
 min-height: 1.2em;
}
.hero-results-msg.error { color: #fc8181; }
.hero-results-msg.success { color: #68d391; }
.hero-results-msg.info { color: #fbd38d; }

@keyframes fu {
 from { opacity:0; transform: translateY(30px); }
 to { opacity:1; transform: translateY(0); }
}

/* --- Press Bar – QOVES-style (dark, big, visible) --- */
.press-bar {
 padding: 3rem 2rem 2rem;
 text-align: center;
 max-width: 1200px;
 margin: 0 auto;
 border-bottom: 1px solid var(--light-gray);
}
.press-logos {
 display: flex;
 justify-content: center;
 align-items: center;
 flex-wrap: wrap;
 gap: 2.5rem 3rem;
}
.press-logo-svg {
 height: 24px;
 width: auto;
 opacity: .7;
 transition: opacity .3s;
}
.press-logo-svg:hover {
 opacity: 1;
}

/* --- Research Section – QOVES-style with academic citations --- */
.research-section {
 padding: clamp(4rem, 8vw, 7rem) clamp(1.5rem, 5vw, 4rem);
 background: var(--white);
}
.research-inner {
 max-width: 900px;
 margin: 0 auto;
}
.research-header {
 text-align: center;
 margin-bottom: 3rem;
}
.research-header .section-title { margin: 0 auto; }
.research-header .section-title em { font-style: italic; }
.research-header .section-subtitle { margin: 1rem auto 0; }
.research-badge {
 display: inline-block;
 padding: .5rem 1.4rem;
 border: 1px solid var(--light-gray);
 border-radius: var(--radius-full);
 font-size: .85rem;
 font-weight: 700;
 letter-spacing: .15em;
 color: var(--dark-gray);
 margin-bottom: 1.5rem;
}
.research-tabs {
 display: flex;
 justify-content: center;
 gap: .5rem;
 margin-bottom: 2.5rem;
 flex-wrap: wrap;
}
.research-tab {
 padding: .7rem 1.6rem;
 border-radius: var(--radius-full);
 border: none;
 background: var(--off-white);
 font-family: 'Inter', sans-serif;
 font-size: 1rem;
 font-weight: 600;
 color: var(--dark-gray);
 cursor: pointer;
 transition: all .3s;
}
.research-tab:hover {
 background: var(--light-gray);
}
.research-tab.active {
 background: var(--near-black);
 color: #fff;
}
.research-content {
 border-radius: var(--radius-lg);
 border: 1px solid var(--light-gray);
 overflow: hidden;
}
.research-panel {
 display: none;
}
.research-panel.active {
 display: block;
}
.research-claim {
 display: grid;
 grid-template-columns: 200px 1fr;
 gap: 2rem;
 padding: 2rem;
 border-bottom: 1px solid var(--light-gray);
 align-items: flex-start;
}
.research-claim:last-child {
 border-bottom: none;
}
.research-claim-left {
 display: flex;
 flex-direction: column;
 gap: .3rem;
}
.research-claim-stat {
 font-family: 'Red Hat Display', sans-serif;
 font-size: 2.4rem;
 font-weight: 900;
 color: var(--teal);
 line-height: 1;
}
.research-claim-label {
 font-size: .95rem;
 font-weight: 600;
 color: var(--dark-gray);
}
.research-claim-desc {
 font-size: 1.05rem;
 line-height: 1.65;
 color: var(--near-black);
 font-weight: 500;
 margin-bottom: .5rem;
}
.research-cite {
 font-size: .85rem;
 line-height: 1.5;
 color: var(--mid-gray);
 font-style: italic;
 padding-left: 1rem;
 border-left: 2px solid var(--light-gray);
}

/* --- Metrics Bar --- */
.metrics-bar {
 display: grid;
 grid-template-columns: repeat(4, 1fr);
 max-width: 1000px; margin: 1rem auto 0;
 position: relative; z-index: 2;
 background: var(--white);
 border-radius: var(--radius-lg);
 box-shadow: var(--shadow-lg);
 padding: 2rem;
}
.metric { text-align: center; padding: 1rem; }
.metric-value {
 font-family: 'Red Hat Display', sans-serif;
 font-size: clamp(1.8rem, 3.5vw, 2.6rem);
 font-weight: 800; line-height: 1;
 margin-bottom: .4rem;
}
.metric-value.color-teal { color: var(--teal); }
.metric-value.color-gold { color: var(--gold); }
.metric-value.color-green { color: var(--green); }
.metric-value.color-purple { color: var(--purple); }
.metric-label {
 font-size: .95rem; color: var(--mid-gray); font-weight: 500;
}

/* --- Sections generiques --- */
section {
 padding: clamp(4rem, 8vw, 7rem) clamp(1.5rem, 5vw, 4rem);
}

.section-label {
 font-size: .85rem; letter-spacing: .15em;
 text-transform: uppercase; font-weight: 700;
 margin-bottom: .8rem;
}
.section-label.teal { color: var(--teal); }
.section-label.green { color: var(--green); }
.section-label.purple { color: var(--purple); }
.section-label.gold { color: var(--gold); }

.section-title {
 font-family: 'Red Hat Display', sans-serif;
 font-size: clamp(2.2rem, 4vw, 3.2rem);
 font-weight: 800; line-height: 1.2;
 color: var(--near-black); max-width: 750px;
}

.section-subtitle {
 font-size: 1.15rem; color: var(--dark-gray);
 max-width: 600px; line-height: 1.7;
 margin-top: 1rem; font-weight: 400;
}

/* --- Product Preview – Bento Grid QOVES-style --- */
.preview-section {
 background: var(--off-white);
}
.preview-inner {
 max-width: 1100px;
 margin: 0 auto;
}
.preview-header {
 text-align: center;
 margin-bottom: 3.5rem;
}
.preview-header .section-title { margin: 0 auto; }
.preview-header .section-subtitle { margin: 1rem auto 0; }

.bento-grid {
 display: grid;
 grid-template-columns: repeat(3, 1fr);
 grid-auto-rows: auto;
 gap: 1.2rem;
}

.bento-card {
 background: var(--white);
 border-radius: var(--radius-lg);
 padding: 1.8rem;
 box-shadow: var(--shadow-sm);
 border: 1px solid rgba(0,0,0,.04);
 transition: all .4s;
 position: relative;
 overflow: hidden;
}
.bento-card:hover {
 transform: translateY(-4px);
 box-shadow: var(--shadow-md);
}

.bento-card-label {
 font-size: .78rem;
 font-weight: 700;
 letter-spacing: .18em;
 color: var(--mid-gray);
 text-transform: uppercase;
 margin-bottom: 1.2rem;
}

/* Bento: Radar */
.bento-radar {
 grid-column: 1 / 3;
 grid-row: 1 / 3;
 display: flex;
 flex-direction: column;
 align-items: center;
}
.bento-radar-svg {
 width: 100%;
 max-width: 300px;
 aspect-ratio: 1;
 margin: .5rem 0;
}
.bento-radar-shape {
 fill: rgba(66,152,181,.1);
 stroke: var(--teal);
 stroke-width: 2;
 animation: radarDraw 2s ease-out both;
}
@keyframes radarDraw {
 from { opacity: 0; stroke-dasharray: 800; stroke-dashoffset: 800; }
 to { opacity: 1; stroke-dasharray: 800; stroke-dashoffset: 0; }
}
.bento-radar-label {
 font-family: 'Inter', sans-serif;
 font-size: 9px;
 fill: var(--dark-gray);
 letter-spacing: .08em;
 text-transform: uppercase;
 font-weight: 600;
}
.bento-radar-footer {
 display: flex;
 gap: .5rem;
 margin-top: auto;
 padding-top: 1rem;
}
.bento-tag {
 padding: .3rem .8rem;
 border-radius: var(--radius-full);
 font-size: .8rem;
 font-weight: 600;
}
.bento-tag.teal { background: var(--teal-bg); color: var(--teal); }
.bento-tag.purple { background: var(--purple-bg); color: var(--purple); }
.bento-tag.green { background: var(--green-bg); color: var(--green); }
.bento-tag.gold { background: var(--gold-bg); color: var(--gold); }

/* Bento: Type card */
.bento-type {
 display: flex;
 flex-direction: column;
}
.bento-type-code {
 font-family: 'Red Hat Display', sans-serif;
 font-size: 2.5rem;
 font-weight: 900;
 color: var(--purple);
 letter-spacing: .05em;
 line-height: 1;
}
.bento-type-name {
 font-family: 'Red Hat Display', sans-serif;
 font-size: 1.35rem;
 font-weight: 700;
 color: var(--near-black);
 margin-top: .4rem;
}
.bento-type-family {
 display: flex;
 align-items: center;
 gap: .4rem;
 font-size: .92rem;
 font-weight: 600;
 color: var(--dark-gray);
 margin-top: .5rem;
}
.bento-family-dot {
 width: 8px;
 height: 8px;
 border-radius: 50%;
 flex-shrink: 0;
}
.bento-type-desc {
 font-size: 1rem;
 line-height: 1.6;
 color: var(--mid-gray);
 margin-top: .8rem;
}
.bento-type-traits {
 display: flex;
 flex-wrap: wrap;
 gap: .4rem;
 margin-top: auto;
 padding-top: 1rem;
}
.bento-type-traits span {
 padding: .25rem .7rem;
 background: var(--purple-bg);
 border-radius: var(--radius-full);
 font-size: .82rem;
 font-weight: 600;
 color: var(--purple);
}

/* Bento: Dimensions */
.bento-dims {
 grid-column: 1 / 3;
}
.bento-dim-row {
 display: grid;
 grid-template-columns: 90px 1fr 40px;
 gap: .8rem;
 align-items: center;
 margin-bottom: .7rem;
}
.bento-dim-row:last-child { margin-bottom: 0; }
.bento-dim-label {
 font-size: .9rem;
 font-weight: 600;
 color: var(--near-black);
 text-align: right;
}
.bento-dim-bar {
 height: 8px;
 background: var(--light-gray);
 border-radius: var(--radius-full);
 overflow: hidden;
}
.bento-dim-fill {
 height: 100%;
 border-radius: var(--radius-full);
 transition: width 1.5s ease-out;
}
.bento-dim-pct {
 font-size: .9rem;
 font-weight: 700;
 color: var(--near-black);
 text-align: right;
}

/* Bento: Compatibility */
.bento-compat {
 display: flex;
 flex-direction: column;
}
.bento-compat-pair {
 display: flex;
 align-items: center;
 justify-content: center;
 gap: 1rem;
 margin-bottom: 1.2rem;
}
.bento-compat-circle {
 width: 56px;
 height: 56px;
 border-radius: 50%;
 border: 2.5px solid;
 display: flex;
 align-items: center;
 justify-content: center;
 font-family: 'Red Hat Display', sans-serif;
 font-size: .85rem;
 font-weight: 800;
 color: var(--near-black);
 letter-spacing: .03em;
}
.bento-compat-line {
 width: 40px;
 height: 2px;
 background: linear-gradient(90deg, var(--purple), var(--teal));
 border-radius: 2px;
}
.bento-compat-score {
 display: flex;
 align-items: baseline;
 gap: .5rem;
 margin-bottom: .5rem;
}
.bento-compat-pct {
 font-family: 'Red Hat Display', sans-serif;
 font-size: 1.5rem;
 font-weight: 800;
 color: var(--teal);
 line-height: 1;
}
.bento-compat-text {
 font-size: .92rem;
 color: var(--mid-gray);
 font-weight: 500;
}

/* Bento: Career */
.bento-career-list {
 display: flex;
 flex-direction: column;
 gap: .6rem;
}
.bento-career-item {
 display: flex;
 align-items: center;
 gap: .8rem;
 padding: .6rem .8rem;
 background: var(--off-white);
 border-radius: var(--radius);
 font-size: .95rem;
 font-weight: 500;
 color: var(--near-black);
}
.bento-career-match {
 font-family: 'Red Hat Display', sans-serif;
 font-size: .92rem;
 font-weight: 800;
 color: var(--green);
 min-width: 32px;
}

/* Bento: Stats */
.bento-stats {
 display: flex;
 flex-direction: column;
 gap: 1rem;
}
.bento-stat-item {
 padding-bottom: 1rem;
 border-bottom: 1px solid var(--light-gray);
}
.bento-stat-item:last-child { border-bottom: none; padding-bottom: 0; }
.bento-stat-value {
 font-family: 'Red Hat Display', sans-serif;
 font-size: 1.7rem;
 font-weight: 800;
 line-height: 1;
 margin-bottom: .3rem;
}
.bento-stat-desc {
 font-size: .92rem;
 color: var(--mid-gray);
 line-height: 1.4;
}

.preview-disclaimer {
 text-align: center;
 font-size: .9rem;
 color: var(--mid-gray);
 font-style: italic;
 margin-top: 2rem;
}

/* --- Discover Section – "Vous decouvrirez" QOVES-style --- */
.discover-section {
 background: var(--white);
}
.discover-inner {
 max-width: 1100px;
 margin: 0 auto;
}
.discover-header {
 text-align: center;
 margin-bottom: 3.5rem;
}
.discover-header .section-title { margin: 0 auto; }
.discover-header .section-subtitle { margin: 1rem auto 0; }

.discover-grid {
 display: grid;
 grid-template-columns: repeat(3, 1fr);
 gap: 1.5rem;
}

.discover-card {
 background: var(--off-white);
 border-radius: var(--radius-lg);
 overflow: hidden;
 transition: all .4s;
}
.discover-card:hover {
 transform: translateY(-6px);
 box-shadow: var(--shadow-md);
}

.discover-visual {
 height: 160px;
 background: linear-gradient(135deg, var(--light-gray), var(--off-white));
 display: flex;
 align-items: center;
